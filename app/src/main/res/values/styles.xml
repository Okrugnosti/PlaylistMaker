<?xml version="1.0" encoding="utf-8"?>

<!-- Day Activity -->
<resources>

    <!-- Main Activity -->

    <style name="MainActivityDayLinearLayout">
        <item name="android:background">@color/purple_200</item>
    </style>

    <style name="MainActivityDayTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>


    <style name="MainActivityDayButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_heightd0</item>

        <item name="android:layout_marginEnd">@dimen/layout_marginEnd0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingStart">0dp</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize</item>

        <item name="cornerRadius">@dimen/dp10</item>

        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dp10</item>
        <item name="iconTint">@color/black</item>

        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>


    <!-- Setting Activity -->

    <style name="SettingActivityDayLinearLayout">
        <item name="android:background">@color/white</item>
    </style>


    <style name="SettingActivityDayTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>


    <style name="SettingActivityDayFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/paddingVertical20</item>

    </style>


    <style name="SettingActivityDayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize20</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>


    <style name="SettingActivityDayImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/layout_marginTop8</item>
    </style>

    <!-- Search Activity -->

    <style name="SearchActivityDayLinearLayout">
        <item name="android:background">@color/white</item>
    </style>


    <style name="SearchActivityDayImageVector">
        <item name="android:src">@drawable/vector</item>
    </style>

    <style name="SearchActivityDayTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchActivityDayFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height50</item>
        <item name="android:layout_marginLeft">@dimen/layout_marginLeft10</item>
        <item name="android:background">@drawable/roundrect</item>
    </style>


    <style name="SearchActivityDayImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:src">@drawable/search_light_mode</item>
    </style>


    <style name="SearchActivityDayClear">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:src">@drawable/clear_light</item>
    </style>

    <style name="SearchActivityDayEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>