<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        style="@style/ErrorImageStyle"
        android:layout_marginStart="@dimen/mar_120dp"
        android:layout_marginTop="@dimen/mar_102dp"
        android:layout_marginEnd="@dimen/mar_120dp"
        android:src="@drawable/connec_no">
    </ImageView>

    <TextView
        style="@style/ErrorTextStyle"
        android:layout_marginStart="@dimen/mar_24dp"
        android:layout_marginTop="@dimen/mar_16dp"
        android:layout_marginEnd="@dimen/mar_24dp"
        android:text="@string/connections_issue"
        android:textAlignment="center">
    </TextView>

    <Button
        style="@style/ButtonErrorStyle"
        android:id="@+id/refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/mar_8dp"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/refresh"
        android:textSize="14sp">
    </Button>
</LinearLayout>